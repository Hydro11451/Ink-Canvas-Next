<Window x:Class="Ink_Canvas_Next.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ink_Canvas_Next"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Acrylic Brush for the background -->
        <Grid.Background>
            <SolidColorBrush Color="Transparent"/>
        </Grid.Background>
        
        <controls:AcrylicBrush BackgroundSource="HostBackdrop" TintColor="#FF0078D7" TintOpacity="0.8" FallbackColor="#FF0078D7" />
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="欢迎来到我们的应用！" FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
            <Button Content="开始使用" Width="200" Height="50" Background="#FF0078D7" Foreground="White" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
